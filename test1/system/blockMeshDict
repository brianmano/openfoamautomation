FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
convertToMeters 1.0;

vertices
(
    (-5.0 -4.0 0)
    (5.0 -4.0 0)
    (5.0 4.0 0)
    (-5.0 4.0 0)
    (-5.0 -4.0 0.01)
    (5.0 -4.0 0.01)
    (5.0 4.0 0.01)
    (-5.0 4.0 0.01)
);

blocks
(
    // Significantly increased cell count for a better base mesh
    // This provides a more robust foundation for snappyHexMesh to work on.
    hex (0 1 2 3 4 5 6 7) (1200 840 1) simpleGrading (1 1 1)
);

boundary
(
    inlet
    { type patch; faces ((0 4 7 3)); }
    outlet
    { type patch; faces ((1 2 6 5)); }
    top
    { type patch; faces ((3 7 6 2)); }
    bottom
    { type patch; faces ((0 1 5 4)); }
    frontAndBack
    { type empty; faces ((0 3 2 1)(4 5 6 7)); }
);
mergePatchPairs ();
