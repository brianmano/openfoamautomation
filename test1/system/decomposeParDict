FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}

// Use the Scotch decomposition method, which is a graph partitioning
// algorithm optimized to minimize the number of shared faces between processors.
// This is the most robust method for solving face-matching errors.
method      scotch;

numberOfSubdomains 8;